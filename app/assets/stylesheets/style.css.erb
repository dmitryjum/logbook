/*************************/
/*****calendar styles*****/
/*************************/

#calendar table {
  border-collapse: collapse;
  width: 30%;
  height: 30%;
  background: rgba(234,228,204,0.2);

}

table tr.even, table tr.alt, table tr:nth-of-type(even) {
  background: rgba(234,228,204,0.2);
}

#calendar td,
#calendar th {
  font-family: "Lucida Grande",arial,helvetica,sans-serif;
  font-size: 10px;
  padding: 6px;
  border: 1px solid #999;
}

#calendar th {
  background: rgba(117,104,52,0.25);
  color: white;
  text-align: center;
  width: 14.2857142857143%;
}

#calendar td {
  color: white;
  height: 70px;
  vertical-align: top;
  font-size: 16px;
}

#calendar #month {
  margin: 0;
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: center;
}

#calendar #month a, #calendar #month a:hover {
  text-decoration: none;
  padding: 0 10px;
  color: #999;
}

#calendar .today {
  background-color: #D7F2FF;
}

#calendar ul {
  margin: 0;
  margin-top: 5px;
  padding: 0;
  list-style: none;
}

#calendar li {
  margin: 0;
  padding: 0;
  font-size: 11px;
  text-align: center;
}
