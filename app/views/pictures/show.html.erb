<%= link_to "Go back the the jump description", jump_path(@jump) %>
<div class="picture_show">
  <%= image_tag @picture.picture_url %>
  <% if current_user.id == @jump.user_id %>
    <%= button_to "Delete this picture",
     picture_path(@picture, jump_id: params[:jump_id]),
      method: :delete, data: { confirm: "Are you sure?"} %>
  <% end %>
</div>
<div class="comments">
  <div id="comment-list">
    <ul>
      <% @comments.each do |c| %>
      <% author = User.find_by(id: c.user_id) %>
      <li><strong>Author</strong>:<%= author.first_name %> <%= author.last_name %> <strong>Comment</strong>: <%= c.comment %>. <strong>Date</strong>: <%= c.created_at %>
      <% if current_user == author %> 
       <%= link_to "X", picture_comment_path(c, picture_id: @picture.id), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>
       <% end %>
     </li>
      <% end %>
    </ul>
  </div>
  <div id="comment-form">
    <%= form_for [@picture, @comment] do |f| %>
    <p>Enter your comment here</p>
    <%= f.text_area :comment %>
    <%= f.submit %>
    <% end %>
  </div>
</div>