<div class="login">
  <%= form_tag "/session" do %>
  <%= email_field_tag :email %>
  <%= password_field_tag :password %>
  <%= submit_tag "Log in!" %>
  <% end %>

  <% unless flash[:message].nil? %>
    <div id="errors">
      <h3>Errors!</h3>
      <ul>
        <li><em><%= flash[:message] %></em></li>
      </ul>
    </div>
  <% end %>
</div>
