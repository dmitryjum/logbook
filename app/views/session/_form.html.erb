<div class="login">
  <%= form_tag "/session" do %>
  <%= email_field_tag :email %>
  <%= password_field_tag :password %>
  <%= submit_tag "Log in!" %>
  <% end %>

  <% unless flash[:message].nil? %>
    <div id="errors">
      <ul>
        <li data-alert class="alert-box warning round"><%= flash[:message] %>
          <a href="#" class="close">&times;</a>
        </li>
      </ul>
    </div>
  <% end %>
</div>
