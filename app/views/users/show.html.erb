<h2>Welcome <%= @user.first_name %>!</h2>
<br/>
<div class="avatar">
  <%= link_to "X", remove_avatar_user_path(@user) %>
  <%= image_tag(@user.avatar.url) %>
</div>
<div class="user-controls">
  <ul>
    <li><%= link_to "Add new jump", new_user_jump_path(@user) %></li>
    <li><%= link_to "View my logbook", user_jumps_path(@user) %></li>
    <li><%= link_to "Edit My Info", edit_user_path(@user) %></li>
    <li><%= link_to "Delete my account", user_path(@user), method: :delete, data: { confirm: "Are you sure?"} %></li>
    <% if @signature != nil %>
    <li>My signature: <%= image_tag @signature.code_url %></li>
    <% end %>
  </ul>
</div>
<div id="calendar">
  <h2 id="month">
    <%= link_to "<<", user_path(date: @date - 1.month) %>
    <%= "#{@date.strftime("%B")} #{@date.year}" %>
    <%= link_to ">>", user_path(date: @date + 1.month) %>
  </h2>
  <%= calendar @date do |date| %>
      <%= date.day %>
    <% my_jumps = @jumps.where(date: date).select {|jump| jump.user_id == current_user.id} %>
    <% other_jumps = @jumps.where(date: date).select {|jump| jump.shared_users.include?(current_user)} %>
  <ul>
    <% if my_jumps.length > 0 %>
      <li id="mine"><%= link_to "My jumps: #{my_jumps.length}", jump_day_user_jumps_path(@user, date: date, owner: "mine") %></li>
    <% end %>
    <% if other_jumps.length > 0 %>
      <li id="other"><%= link_to "Other jumps: #{other_jumps.length}", jump_day_user_jumps_path(@user, date: date, owner: "others") %></li>
    <% end %>
  </ul>
  <% end %>
</div>

